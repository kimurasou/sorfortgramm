.profile-contents
  .profile-content
    =image_tag avatar_url(@user), class: "round-image"
    .user-name
      %h1= @user.name
      -if @user == current_user
        .profile-edit
          =link_to "プロフィール編集",edit_user_path(@user) , class: "edit-profile"
          -if user_signed_in?
            =link_to "ログアウト", destroy_user_session_path, method: :delete, class: "delete-user", data: { confirm: 'ログアウトしますか？' }
          -# = icon('fas', 'cog')