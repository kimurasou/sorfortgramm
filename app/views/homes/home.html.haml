.home
  - @posts.each do |post|
    .card-wrap
      .card
        .card-header
          = link_to user_path(post.user), class: "no-text-decoration" do
            = image_tag avatar_url(post.user), class: "post-profile-icon"
          .name-user
            = link_to user_path(post.user), class: "user-name" do
              = post.user.name
          .delete-post
            - if post.user.id == current_user.id
              = link_to post_path(post), method: :delete, class: "post-delete" do
                = icon('fas', 'trash')
        -# = image_tag post.photos.first.image.url(:medium), class: "card-img-top", width: "500px", heigth: "600px"
        -# = image_tag image_url, data: { index: i }, width: "100", height: '120'
        = image_tag post.photos[0].image.url, height: "500px", width: "650px"
        .card-body
          .like-comment
            = link_to  "#", class: "love" do
              = icon('far', 'heart')
            = link_to  "#", class: "comment" do
              = icon('far', 'comment')
          %div
            %strong 「いいね！」10件
          %div.post-content
            .post-text
              %span= post.text
              %q.created-at 
                -# = post.created_at
                = link_to time_ago_in_words(post.created_at).upcase + "前", "#", class: "post-time"
            .comment-all
              %h2.current-comment
                < コメント一覧 >
              .comment-each
                %pあああああ
                %pあああああ
                %pあああああ
                %pあああああ
                %pあああああ
                %pあああああ
                %pあああああ
                %pあああああ
            = form_with do |form|
              .comment-content
                -# %form.w-100{:action => "#"}
                -#   %div
                -#     %textarea.form-control.comment-input.border-0{:placeholder => "コメント...", :rows => "1"}
                =form.text_area :comment, placeholder: "例）素敵ですね", class: "comment-form"
              .comment-button
                =form.submit "コメントする", class: "comment-btn"
